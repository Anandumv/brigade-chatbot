# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
GPT_MODEL=gpt-4-turbo
LLM_MODEL=gpt-4-turbo
TEMPERATURE=0.1
MAX_TOKENS=1500

# Tavily Configuration (for web search)
TAVILY_API_KEY=tvly-your-tavily-key-here

# Supabase Configuration (OPTIONAL - only for hybrid mode)
SUPABASE_URL=
SUPABASE_KEY=
SUPABASE_SERVICE_KEY=

# Application Configuration
ENVIRONMENT=development
API_HOST=0.0.0.0
API_PORT=8000

# Vector Search Configuration
SIMILARITY_THRESHOLD=0.5
TOP_K_RESULTS=5
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# Response Time Configuration
TARGET_RESPONSE_TIME=3000

# Pixeltable Configuration (PRIMARY DATABASE)
USE_PIXELTABLE=true
PIXELTABLE_DATA_DIR=
PIXELTABLE_MODE=exclusive

# Redis Configuration (for session persistence)
# Local development (requires Docker: docker run -d -p 6379:6379 redis)
REDIS_URL=redis://localhost:6379/0
# Railway production (will be auto-provided by Railway)
# REDIS_URL=redis://default:PASSWORD@redis.railway.internal:6379
REDIS_TTL_SECONDS=5400

# Railway PostgreSQL (OPTIONAL - auto-provided by Railway)
DATABASE_URL=
POSTGRES_URL=
